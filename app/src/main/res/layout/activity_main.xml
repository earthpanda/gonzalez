<com.dangbei.gonzalez.layout.GonRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dangbei.gonzalez.view.GonCheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00f"
        app:gon_layout_height="300"
        app:gon_layout_margin="100"
        app:gon_layout_width="300"/>

    <com.dangbei.gonzalez.view.GonTextView
        android:id="@+id/gtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0"
        android:drawableTop="@mipmap/ic_launcher_round"
        android:gravity="center_horizontal"
        android:text="ABC"
        android:textColor="#000"
        app:gon_horizontalDrawablePadding="120"
        app:gon_layout_height="500"
        app:gon_layout_marginLeft="400"
        app:gon_layout_marginTop="200"
        app:gon_layout_width="500"
        app:gon_paddingTop="50"
        app:gon_textSize="70"/>

    <com.dangbei.gonzalez.layout.GonRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gtv"
        android:layout_toEndOf="@id/gtv"
        android:layout_toRightOf="@id/gtv"
        android:background="#f0f"
        app:gon_layout_height="200"
        app:gon_layout_marginLeft="200"/>
</com.dangbei.gonzalez.layout.GonRelativeLayout>
